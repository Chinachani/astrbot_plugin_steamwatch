{
  "steam_web_api_key": {
    "type": "string",
    "description": "Steam Web API Key（用于轮询与自定义链接解析）",
    "default": ""
  },
  "poll_interval_sec": {
    "type": "int",
    "description": "轮询间隔（秒，最小 30）",
    "default": 60
  },
  "request_timeout_sec": {
    "type": "int",
    "description": "请求超时（秒）",
    "default": 10
  },
  "request_retries": {
    "type": "int",
    "description": "请求重试次数",
    "default": 2
  },
  "request_retry_delay_sec": {
    "type": "int",
    "description": "重试间隔（秒）",
    "default": 2
  },
  "proxy_url": {
    "type": "string",
    "description": "代理地址（可选，例如 http://127.0.0.1:7890）",
    "default": ""
  },
  "debug_log": {
    "type": "bool",
    "description": "是否开启调试日志",
    "default": false
  },
  "render_as_image": {
    "type": "bool",
    "description": "是否将查询/通知文本渲染为图片发送",
    "default": true
  },
  "render_image_in_notify": {
    "type": "bool",
    "description": "轮询通知是否也发送图片（关闭则仅查询类发送图片）",
    "default": true
  },
  "image_prefer_game_bg": {
    "type": "bool",
    "description": "背景优先级：true=优先游戏背景，false=优先默认背景",
    "default": true
  },
  "image_default_bg_url": {
    "type": "string",
    "description": "默认背景图 URL（不在游戏时或游戏背景不可用时使用）",
    "default": "https://cdn.cloudflare.steamstatic.com/store/home/store_home_share.jpg"
  },
  "image_width": {
    "type": "int",
    "description": "图片宽度（像素）",
    "default": 1080
  },
  "image_height": {
    "type": "int",
    "description": "图片高度（像素）",
    "default": 608
  },
  "image_padding": {
    "type": "int",
    "description": "图片文本边距（像素）",
    "default": 44
  },
  "image_font_size": {
    "type": "int",
    "description": "图片字体大小",
    "default": 30
  },
  "image_line_spacing": {
    "type": "int",
    "description": "图片行间距（像素）",
    "default": 10
  },
  "image_overlay_alpha": {
    "type": "int",
    "description": "背景遮罩透明度（0-255，越大文字越清晰）",
    "default": 145
  },
  "image_text_color": {
    "type": "string",
    "description": "图片文字颜色（HEX）",
    "default": "#F2F5F8"
  },
  "image_font_path": {
    "type": "string",
    "description": "自定义字体文件路径（可留空自动找系统字体）",
    "default": ""
  },
  "image_auto_download_font": {
    "type": "bool",
    "description": "未配置字体且系统字体不可用时，是否尝试自动下载中文字体",
    "default": true
  },
  "image_font_dir": {
    "type": "string",
    "description": "字体下载目录（用于 /sw font dl 与自动下载）",
    "default": "fonts/steamwatch"
  },
  "image_card_alpha": {
    "type": "int",
    "description": "磨砂卡片透明度（0-255）",
    "default": 160
  },
  "image_card_blur": {
    "type": "int",
    "description": "磨砂卡片模糊半径（像素）",
    "default": 12
  },
  "image_card_padding": {
    "type": "int",
    "description": "卡片内边距（像素）",
    "default": 28
  },
  "image_card_margin": {
    "type": "int",
    "description": "卡片外边距（像素）",
    "default": 44
  },
  "verify_ssl": {
    "type": "bool",
    "description": "是否校验证书（关闭可绕过 CERTIFICATE_VERIFY_FAILED）",
    "default": true
  },
  "show_csgo_friend_code": {
    "type": "bool",
    "description": "是否在绑定/解析中额外显示 CS:GO 好友码",
    "default": false
  },
  "use_localized_game_name": {
    "type": "bool",
    "description": "是否尝试获取游戏中文名（通过 Steam 商店 API）",
    "default": false
  },
  "game_name_language": {
    "type": "string",
    "description": "游戏名语言（默认 schinese）",
    "default": "schinese"
  },
  "game_name_cache_ttl_sec": {
    "type": "int",
    "description": "游戏名缓存有效期（秒）",
    "default": 86400
  },
  "steamids": {
    "type": "list",
    "description": "需要监控的 SteamID64 列表",
    "default": []
  },
  "bindings": {
    "type": "list",
    "description": "用户绑定（由指令维护，格式 user_id:steamid64）",
    "default": []
  },
  "binding_meta": {
    "type": "list",
    "description": "绑定昵称（由指令维护，格式 user_id:nickname）",
    "default": []
  },
  "admin_user_ids": {
    "type": "list",
    "description": "管理员用户ID列表（为空则不限制敏感指令）",
    "default": []
  },
  "auto_add_on_bind_when_no_admin": {
    "type": "bool",
    "description": "当管理员列表为空时，绑定自动加入监控",
    "default": false
  },
  "notify_targets": {
    "type": "list",
    "description": "接收通知的会话目标列表",
    "default": []
  },
  "default_platform_id": {
    "type": "string",
    "description": "订阅会话默认平台ID（兼容旧订阅）",
    "default": "aiocqhttp"
  },
  "default_message_type": {
    "type": "string",
    "description": "订阅会话默认消息类型（GroupMessage/FriendMessage/OtherMessage）",
    "default": "GroupMessage"
  },
  "notify_group_enabled": {
    "type": "bool",
    "description": "是否启用分群订阅",
    "default": false
  },
  "notify_groups": {
    "type": "list",
    "description": "分群订阅（格式 group:target）",
    "default": []
  },
  "steamid_groups": {
    "type": "list",
    "description": "SteamID 分组（格式 steamid:group）",
    "default": []
  },
  "notify_on_stop": {
    "type": "bool",
    "description": "玩家停止游戏时是否通知",
    "default": false
  }
}
